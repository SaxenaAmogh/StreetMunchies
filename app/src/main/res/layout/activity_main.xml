<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number"
        tools:ignore="MissingConstraints">

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:autoSizeTextType="uniform"
        android:autoText="false"
        android:fontFamily="@font/inter_semibold"
        android:text="OTP Verification"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292"
        tools:ignore="Deprecated,TextViewEdits" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_semibold"
        android:paddingVertical="6sp"
        android:text="Enter your email address to send one time password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phoneEditText"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edges"
        android:inputType="text|textEmailAddress"
        android:paddingStart="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="86dp"
        android:layout_height="66dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingVertical="10dp"
        android:text="@string/or"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#AE0C0C0C"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="202dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img"
        android:contentDescription="@string/todo2" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/getotp"
        android:elevation="4dp"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:minHeight="?attr/actionBarSize"
        android:onClick="onGetOTPClicked"
        android:paddingStart="105dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneEditText"
        tools:ignore="MissingConstraints,RtlSymmetry">

        <TextView
            android:id="@+id/cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Continue"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="324dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/google"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_login_buttons"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:onClick="onGoogleLoginClicked"
        android:paddingStart="50dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.139"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/gicon"
            android:layout_width="36dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/google"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="660dp" />

        <TextView
            android:id="@+id/gtext"
            android:layout_width="111dp"
            android:layout_height="45dp"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="#000000"
            android:text="Gmail"
            android:textAlignment="center"
            android:textColor="#BA000000"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="651dp" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/twitter"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_login_buttons"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="50dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/ticon"
            android:layout_width="36dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/twitter"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="660dp" />

        <TextView
            android:id="@+id/ttext"
            android:layout_width="111dp"
            android:layout_height="45dp"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="#000000"
            android:text="Twitter"
            android:textAlignment="center"
            android:textColor="#BA000000"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="651dp" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/facebook"
        android:onClick="onFacebookLoginClicked"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_login_buttons"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="28dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twitter"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/ficon"
            android:layout_width="36dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/facebook"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="660dp" />

        <TextView
            android:id="@+id/ftext"
            android:layout_width="163dp"
            android:layout_height="43dp"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="#000000"
            android:text="Facebook"
            android:textAlignment="center"
            android:textColor="#BA000000"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="540dp" />

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>